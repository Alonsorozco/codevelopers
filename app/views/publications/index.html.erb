<p id="notice"><%= notice %></p>


    <!-- Page Header-->
          <% if  user_signed_in? %>

            <div class="container mb-5">
              <%= link_to 'Comparte Tu Codigo o Comando', new_publication_path ,class:"btn btn-info text-dark rounded-pill p-2" %>
            </div>
            <div class="container">

          <% else %>
            <div class="container mb-5">
              <%= link_to 'Registrate para Compartir', new_user_registration_path ,class:"btn btn-info text-dark rounded-pill p-2" %>
            </div>

          <% end %>

              
          </div>
  
    
          <% @publications.each do |publication| %>
          <div class="container ">
            <hr class="text-muted"/>

            <div class="card opacity-50">
                <div class="card-header ">
                 Quote
                </div>
                <div class="card-body">
                <blockquote class="blockquote mb-0">
                   <p>A well-known quote, contained in a blockquote element.</p>
                    <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
                </blockquote>
              </div>
            </div>
            
            <ul>
          
              <li><h3 class="text-muted" ><%= publication.title %></h3></li>
              
              <li><p class="text-muted"><%= publication.description %></p></li>
              <div class="alert alert-primary font-monospace p-1 opacity-75" role="alert">
                    <h4 class="font-monospace"><%= publication.code%></h4>
              </div>
                
            </ul>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#c0392b" class="bi bi-balloon-fill" viewBox="0 0 16 16">
