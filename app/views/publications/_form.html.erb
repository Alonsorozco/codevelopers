<div class="container shadow-lg p-3 mb-5 bg-dark rounded">

<%= form_with(model: publication, local: true) do |form| %>
  <% if publication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

      <ul>
      <% publication.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-outline">
    <%= form.text_field :title, class:"form-control bg-dark text-muted",placeholder:"Â¿Que titulo debe llevar tu publicacion?" %>
